        <TextBox x:Name="textBoxNomeUsuario" HorizontalAlignment="Left" Height="23" Margin="124,71,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBoxSenhaDoUsuario" HorizontalAlignment="Left" Height="23" Margin="124,104,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnCadastrarUsuario" Content="Cadastrar" HorizontalAlignment="Left" Margin="83,156,0,0" VerticalAlignment="Top" Width="75" Click="btnCadastrarUsuario_Click"/>
        <Button x:Name="btn" Content="Entrar" HorizontalAlignment="Left" Margin="169,156,0,0" VerticalAlignment="Top" Width="75" Click="btn_Click"/>

    </Grid>
</Window>
